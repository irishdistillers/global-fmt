{
  "name": "irishdistillers/global-fmt",
  "description": "Adds the necessary files to your GCMS project for the code to be 'prettier' #cleanCode",
  "type": "library",
  "license": "proprietary",
  "autoload" : {
    "psr-4": {
      "GlobalFmt\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "phpstan/phpstan": "^0.12.32"
  },
  "scripts": {
    "test": [
      "./vendor/bin/phpunit",
      "./vendor/bin/phpcs .",
      "./vendor/bin/phpstan analyse"
    ]
  },
  "require": {
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/filesystem": "^5.1",
    "symfony/finder": "^5.1",
    "symfony/console": "^5.1"
  }
}
